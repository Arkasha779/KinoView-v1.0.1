        <Label Content="Томас Каил" HorizontalAlignment="Left" Margin="271,86,0,0" VerticalAlignment="Top" Foreground="White"/>
        <TextBox HorizontalAlignment="Left" Height="149" Margin="275,273,0,0" TextWrapping="Wrap" Text="История первого министра финансов США Александра Гамильтона на фоне реальных исторических событий: Войны за независимость, основания и становления США." VerticalAlignment="Top" Width="473" RenderTransformOrigin="0.158,0.087" Background="{x:Null}" BorderBrush="{x:Null}" SelectionBrush="{x:Null}" Foreground="White"/>
        <Button x:Name="bb2_Copy" Content="Дата" HorizontalAlignment="Left" Margin="33,352,0,0" VerticalAlignment="Top" Width="93" Click="bb2c_Click" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White"/>
        <Button x:Name="bb2_Copy1" Content="Драма" HorizontalAlignment="Left" Margin="50,55,0,0" VerticalAlignment="Top" Width="76" Click="bb2c1_Click" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White"/>
        <Button x:Name="bb2_Copy2" Content="Страны" HorizontalAlignment="Left" Margin="25,332,0,0" VerticalAlignment="Top" Width="101" Click="bb2c2_Click" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White"/>

    </Grid>
