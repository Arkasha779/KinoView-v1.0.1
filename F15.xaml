        <Button x:Name="bb25_Copy" Content="Странны" HorizontalAlignment="Left" Margin="28,389,0,0" VerticalAlignment="Top" Width="63" Click="bb25c_Click" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White"/>
        <Button x:Name="bb25_Copy1" Content="Криминал" HorizontalAlignment="Left" Margin="148,50,0,0" VerticalAlignment="Top" Width="93" Click="bb25с1_Click" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White"/>

    </Grid>
