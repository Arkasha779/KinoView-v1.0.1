        <Image x:Name="if24" HorizontalAlignment="Left" Height="100" Margin="418,187,0,0" VerticalAlignment="Top" Width="100" MouseLeftButtonDown="if24_MouseLeftButtonDown" Source="img/13.jpg" Grid.Column="1"/>
