        mc:Ignorable="d" Height="450" Width="676.033">
    <Grid Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image x:Name="if19" HorizontalAlignment="Left" Height="100" Margin="61,29,0,0" VerticalAlignment="Top" Width="100" MouseLeftButtonDown="if19_MouseLeftButtonDown" Source="img/9.jpg" Grid.Column="1"/>
