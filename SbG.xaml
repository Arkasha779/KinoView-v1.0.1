        <Image x:Name="if21" HorizontalAlignment="Left" Height="100" Margin="418,29,0,0" VerticalAlignment="Top" Width="100" MouseLeftButtonDown="if21_MouseLeftButtonDown" Source="img/7.jpg" Grid.Column="1"/>
        <Label Content="1917" HorizontalAlignment="Left" Margin="418,134,0,0" VerticalAlignment="Top" Foreground="White" Grid.Column="1" Height="26" Width="80"/>
