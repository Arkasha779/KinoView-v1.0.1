        <Image x:Name="if20" HorizontalAlignment="Left" Height="100" Margin="230,29,0,0" VerticalAlignment="Top" Width="100" MouseLeftButtonDown="if20_MouseLeftButtonDown" Source="img/11.jpg" Grid.Column="1"/>
