        <Button x:Name="bb7_Copy2" Content="Фантастика" HorizontalAlignment="Left" Margin="55,55,0,0" VerticalAlignment="Top" Width="83" Click="bb7с2_Click" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White"/>

